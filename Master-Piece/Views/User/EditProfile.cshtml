@model User
<style>
    .body-content {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f4f7fb;
        margin: 0;
        padding: 0;
        min-height: 100vh;
    }

    .header {
        background-color: #f4f7fb;
        padding: 12px 30px;
        font-size: 18px;
        font-weight: 600;
        border-bottom: 1px solid #ccc;
    }

        .header a {
            color: #2b4c7e;
            text-decoration: none;
            margin-right: 25px;
            font-weight: 500;
        }

            .header a:hover {
                text-decoration: underline;
            }

    .profile-table {
        width: 90%;
        max-width: 1100px;
        margin: 40px auto;
        border-spacing: 40px;
    }

        .profile-table td {
            width: 50%;
            vertical-align: top;
        }

    .profile-container {
        background-color: #fff;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.07);
    }

    .profile-image img {
        max-width: 100%;
        border-radius: 12px;
        display: block;
        margin: 0 auto;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    }

    h2 {
        text-align: center;
        color: #355c8c;
        margin-bottom: 25px;
    }

    .profile-item {
        margin-bottom: 20px;
    }

        .profile-item label {
            display: block;
            font-weight: 600;
            color: #444;
            margin-bottom: 6px;
        }

        .profile-item p {
            margin: 0;
            color: #666;
        }

    /* media (max-width: 768px) { */
