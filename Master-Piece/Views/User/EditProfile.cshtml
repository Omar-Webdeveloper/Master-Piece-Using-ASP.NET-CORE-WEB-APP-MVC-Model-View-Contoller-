        /* { */
    /*     display: block; */
    /* } */

    /* .profile-table tr, */
    /* .profile-table td { */
    /*     display: block; */
    /*     width: 100%; */
    /* } */

    /* .profile-table td { */
    /*     margin-bottom: 20px; */
    /* } */

    /* } */
</style>
<div class="body-content">
    <div class="header">
        <a asp-action="Profile" asp-controller="User">Profile</a>
        <a asp-action="EditProfile" asp-controller="User">Edit Profile</a>
        <a asp-action="BookedServicesHistory" asp-controller="User">Order History</a>
        <a asp-action="Reset_Password" asp-controller="User">Reset Password</a>
    </div>

    <form asp-action="EditProfile" >
        <table class="profile-table">
            <tr>
                <td class="profile-image">
                    <div class="profile-container">
                        <img src="@Model.Image" alt="User Profile Image" />
                    </div>
                </td>
                <td>
                    <div class="profile-container">
                        <h2>Edit Profile</h2>
                        <div class="profile-item">
                            <label asp-for="FirstName">First Name:</label>
                            <input asp-for="FirstName" type="text" id="FirstName" name="FirstName" value="@Model.FirstName" class="form-control" />
                        </div>
                        <div class="profile-item">
                            <label asp-for="LastName">Last Name:</label>
                            <input type="text" asp-for="LastName" id="LastName" name="LastName" value="@Model.LastName" class="form-control" />
                        </div>
                        <div class="profile-item">
                            <label asp-for="Email">Email:</label>
                            <input type="email" asp-for="Email" id="Email" name="Email" value="@Model.Email" class="form-control" />
                        </div>
                        <div class="profile-item">
                            <label asp-for="PhoneNumber">Phone:</label>
                            <input type="tel" asp-for="PhoneNumber"  id="PhoneNumber" name="PhoneNumber" value="@Model.PhoneNumber" class="form-control" />
                        </div>
                        <div class="profile-item">
                            <label asp-for="Address">Address:</label>
                            <input type="text" asp-for="Address" id="Address" name="Address" value="@Model.Address" class="form-control" />
                        </div>
                        <div class="profile-item">
                            <label asp-for="DateOfBirth">Date of Birth:</label>
                            <input type="date" asp-for="DateOfBirth" id="DateOfBirth" name="DateOfBirth" value="@Model.DateOfBirth" class="form-control" />
                        </div>
                        <div class="profile-item">
                            <label asp-for="Gender">Gender:</label>
                            <select id="Gender" asp-for="Gender" name="Gender" class="form-control">
                                @if (Model.Gender == "Male")
                                {
                                    <option value="Male" selected>Male</option>
                                    <option value="Female">Female</option>
                                }
                                else if (Model.Gender == "Female")
                                {
                                    <option value="Male">Male</option>
                                    <option value="Female" selected>Female</option>
                                }
                                else
                                {
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                }
                            </select>
                        </div>
                        <div>
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                        </div>
                    </div>
                </td>
            </tr>
        </table>
    </form>
</div>