 @model User  
 <style>  
     .body-content {  
         font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;  
         background-color: #f4f7fb;  
         margin: 0;  
         padding: 0;  
         min-height: 100vh;  
     }  

     .header {  
         background-color: #f4f7fb;  
         padding: 12px 30px;  
         font-size: 18px;  
         font-weight: 600;  
         border-bottom: 1px solid #ccc;  
     }  

         .header a {  
             color: #2b4c7e;  
             text-decoration: none;  
             margin-right: 25px;  
             font-weight: 500;  
         }  

             .header a:hover {  
                 text-decoration: underline;  
             }  

     .profile-table {  
         width: 90%;  
         max-width: 1100px;  
         margin: 40px auto;  
         border-spacing: 40px;  
     }  

         .profile-table td {  
             width: 50%;  
             vertical-align: top;  
         }  

     .profile-container {  
         background-color: #fff;  
         padding: 25px;  
         border-radius: 12px;  
         box-shadow: 0 3px 10px rgba(0, 0, 0, 0.07);  
     }  

     .profile-image img {  
         max-width: 100%;  
         border-radius: 12px;  
         display: block;  
         margin: 0 auto;  
         box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);  
     }  

     h2 {  
         text-align: center;  
         color: #355c8c;  
         margin-bottom: 25px;  
     }  

     .profile-item {  
         margin-bottom: 20px;  
     }  

         .profile-item label {  
             display: block;  
             font-weight: 600;  
             color: #444;  
             margin-bottom: 6px;  
         }  

         .profile-item p {  
             margin: 0;  
             color: #666;  
         }  

     /* media (max-width: 768px) { */  
     /*     .profile-table  

         /* { */  
     /*     display: block; */  
     /* } */  

     /* .profile-table tr, */  
     /* .profile-table td { */  
     /*     display: block; */  
     /*     width: 100%; */  
     /* } */  

     /* .profile-table td { */  
     /*     margin-bottom: 20px; */  
     /* } */  

     /* } */  
 </style>  
 <div class="body-content">  
     <div class="header">  
         <a asp-action="Profile" asp-controller="User">Profile</a>  
         <a asp-action="EditProfile" asp-controller="User">Edit Profile</a>  
         <a asp-action="BookedServicesHistory" asp-controller="User">Order History</a>  
         <a asp-action="Reset_Password" asp-controller="User">Reset Password</a>  
     </div>

    <form asp-controller="User" asp-action="EditProfile" method="post">
        <table class="profile-table">
            <tr>
                <td class="profile-image">
                    <div class="profile-container">
                        @if (@Model.PersonalImage != null)
                        {
                            var base64Image = Convert.ToBase64String(@Model.PersonalImage);
                            var imgSrc = $"data:image/jpeg;base64,{base64Image}";
                            <img src="@imgSrc" alt="Issue Image" style="width: 80px; height: 80px; object-fit: cover;" />
                        }
                        else
                        {
                            <span>No Image</span>
                        }
                        <label for="userimage">Image</label>
                        <input type="file" id="userimage" />
                    </div>
                </td>
                <td>
                    <div class="profile-container">
                        <h2>Edit Profile</h2>

                        <div class="profile-item">
                            <label asp-for="FirstName">First Name:</label>
                            <input asp-for="FirstName" class="form-control" />
                        </div>

                        <div class="profile-item">
                            <label asp-for="LastName">Last Name:</label>
                            <input asp-for="LastName" class="form-control" />
                        </div>

                        <div class="profile-item">
                            <label asp-for="PhoneNumber">Phone:</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                        </div>

                        <div class="profile-item">
                            <label asp-for="PersonalAddress">Address:</label>
                            <input asp-for="PersonalAddress" class="form-control" />
                        </div>

                        <div class="profile-item">
                            <label asp-for="DateOfBirth">Date of Birth:</label>
                            <input asp-for="DateOfBirth" type="date" class="form-control" />
                        </div>

                        <div class="profile-item">
                            <label asp-for="Gender">Gender:</label>
                            <select asp-for="Gender" class="form-control">
                                <option value="">Select Gender</option>
                                <option value="Male" selected="@((Model.Gender == "Male") ? "selected" : null)">Male</option>
                                <option value="Female" selected="@((Model.Gender == "Female") ? "selected" : null)">Female</option>
                            </select>
                        </div>

                        <div>
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                        </div>

                    </div>
                </td>
            </tr>
        </table>
    </form>
 </div>  