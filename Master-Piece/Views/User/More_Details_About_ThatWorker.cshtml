@model Master_Piece.Models.WorkerDetailsAndPreBookingViewModel

<style>
    .Contact_Card {
        margin-left: 20px;
        margin-right: 20px;
        width: 1200px;
        height: 1200px;
        background-color: #FEF9F2;
    }



    section.card {
        width: 900px;
        height: 2200px;
        border: 1px solid #ccc;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        display: flex;
        margin: 20px 0;
        padding: 20px;
        position: relative;
        margin-left: 150px;
    }

    section.card-image-section {
        display: flex;
        justify-content: center;
    }

    .card-image {
        width: 225px;
        height: 165px;
        border-radius: 15%;
    }

    section.card-content {
        flex-grow: 1;
        padding: 0 20px;
    }



        section.card-content h6 {
            margin: 5px 0;
        }



    section.card-bill {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        justify-content: center;
        padding: 10px;
        width: 355px;
        height: 435px;
        border-left: 1px solid #ccc;
        border: 1px solid #020202; /* Add this line for a border */
        border-radius: 8px; /* Optional: add border radius */
        margin-left: 20px; /* Optional: add margin to separate from card content */
    }

        section.card-bill h3 {
            margin: 5px 0;
        }

        section.card-bill h6 {
            margin: 5px 0;
        }

        section.card-bill hr {
            width: 100%;
            margin: 10px 0;
        }

        section.card-bill label {
            margin: 5px 0;
        }

        section.card-bill input {
            margin-bottom: 10px;
            padding: 5px;
            width: 120px;
        }

    .action-button {
        padding: 10px 20px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        .action-button:hover {
            background-color: #0056b3;
        }

    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        background-color: rgba(0, 0, 0, 0.4);
        backdrop-filter: blur(8px);
        padding-top: 100px;
    }

    .modal-content {
        background-color: #fefefe;
        width: 600px;
        height: 350px;
        margin: 5% auto;
        padding: 20px;
        border: 2px solid #888;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0,0,0,0.2);
    }

    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }

    .button {
        background-color: #007bff;
        border: none;
        color: white;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
    }





    .words-container {
        display: flex;
        justify-content: space-between;
        width: 30%;
    }

    .word {
        margin: 0 10px; /* Optional: adjust spacing between words */
    }

    .divider-line {
        margin-top: 10px; /* Optional: adjust spacing above the line */
        border: none;
        height: 1px;
        background-color: #ccc;
        width: 500px;
        margin-bottom: 0px;
        margin-top: 0px;
        margin-right: 0px;
        margin-left: 0px;
    }

    .timetable {
        border: 1px solid black;
    }


    .slider {
        position: relative;
        width: 260px;
        height: 255px;
        max-width: 600px;
        margin-top: 20px;
        margin-bottom: 20px;
        overflow: hidden;
        /* border: 1px solid #ccc;*/
    }

    .slides {
        display: flex;
        transition: transform 0.5s ease-in-out;
    }

        .slides img {
            width: 120px;
            height: 175px;
            display: block;
            margin-left: 53px;
        }

    .nav-btn {
        transform: translateY(-50%);
        background-color: rgba(0, 0, 0, 0.5);
        color: white;
        border: none;
        cursor: pointer;
        padding: 10px;
        font-size: 18px;
    }

    .prev-btn {
        left: 10px;
    }

    .next-btn {
        right: 10px;
    }

    .review-container1 {
        font-family: Arial, sans-serif;
        width: 460px;
        margin: auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .review-title1 {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .review-text1 {
        font-size: 16px;
        margin-bottom: 10px;
    }

    .review-rating1 {
        display: flex;
        align-items: center;
        font-size: 18px;
    }

        .review-rating1 .stars1 {
            color: gold;
            margin-right: 5px;
        }





    .a-review-container {
        position: relative;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
        margin-bottom: 10px;
        width: 460px;
    }

    .a-review-title {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .a-review-text {
        margin-bottom: 10px;
    }

    .a-review-rating {
        margin-bottom: 10px;
    }

    .a-review-details {
        margin-bottom: 10px;
    }

    .a-details-text {
        margin-bottom: 5px;
    }

    .a-details-subtext {
        font-style: italic;
        margin-bottom: 5px;
    }

    .a-details-title {
        font-weight: bold;
        margin-bottom: 10px;
    }

    .a-review-date {
        font-size: 14px;
        color: #888;
    }

    .a-stars {
        color: gold;
    }




    .credentials-card {
        border: 1px solid #ccc;
        border-radius: 8px;
        padding: 16px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #fff;
        width: 470px;
    }

    .credentials-title, .license-title {
        font-size: 18px;
        font-weight: bold;
        margin-bottom: 8px;
    }

    .license-details {
        font-size: 14px;
        margin-bottom: 16px;
    }

    .license-note {
        font-style: italic;
    }

    .license-verified {
        display: block;
        margin-top: 8px;
        color: #888;
    }

    .credential-details-link {
        color: #007bff;
        text-decoration: none;
    }

        .credential-details-link:hover {
            text-decoration: underline;
        }


    .faq-card {
        border: 1px solid #ccc;
        border-radius: 8px;
        padding: 16px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #fff;
        width: 470px;
        margin: 20px auto;
    }

    .faq-title {
        font-size: 20px;
        font-weight: bold;
        margin-bottom: 16px;
        text-align: left;
    }

    .faq-question p {
        font-size: 14px;
        margin-bottom: 12px;
    }

    .faq-divider {
        border: 0;
        height: 1px;
        background: #eee;
        margin: 20px 0;
    }
</style>
