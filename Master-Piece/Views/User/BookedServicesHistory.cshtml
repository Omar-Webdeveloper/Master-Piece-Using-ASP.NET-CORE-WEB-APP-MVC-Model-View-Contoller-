@model List<BookingHistoryViewModel>

<style>
    table {
        width: 90%;
        margin: 30px auto;
        border-collapse: collapse;
        font-family: 'Segoe UI', sans-serif;
        background-color: #ffffff;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 3px 10px rgba(0,0,0,0.05);
    }

        table thead {
            background-color: #2b4c7e;
            color: white;
        }

        table th, table td {
            padding: 15px;
            text-align: center;
            border-bottom: 1px solid #eee;
        }

        table tr:hover {
            background-color: #f0f4ff;
        }

    .no-data {
        text-align: center;
        color: #666;
        margin-top: 20px;
    }

    button {
        padding: 6px 12px;
        background-color: #355c8c;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-weight: 500;
    }

        button:hover {
            background-color: #2b4c7e;
        }
</style>

<style>
    .body-content {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f4f7fb;
        margin: 0;
        padding: 0;
        min-height: 100vh;
    }

    .smallheader {
        background-color: #f4f7fb;
        padding: 10px 20px;
        font-size: 16px;
        font-weight: 600;
        border-bottom: 1px solid #ccc;
        width: 75%;
        margin: 85px auto 0;
        text-align: center;
        gap: 10px;
        display: flex;
    }

        .smallheader a {
            color: #2b4c7e;
            text-decoration: none;
            margin: 0 15px;
            font-weight: 500;
        }

            .smallheader a:hover {
                text-decoration: underline;
            }

    .profile-container {
        background-color: #fff;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.07);
    }

    .profile-table {
        width: 80%;
        max-width: 900px;
        margin: 40px auto;
    }

    .profile-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 0;
        border-bottom: 1px solid #ddd;
    }

        .profile-item label {
            font-weight: bold;
            color: #444;
            flex: 1;
        }

        .profile-item p {
            flex: 2;
            text-align: left;
            color: #666;
        }

    .edit-profile-btn {
        display: block;
        width: fit-content;
        margin: 20px auto;
        padding: 10px 20px;
        background-color: #355c8c;
        color: #fff;
        border-radius: 5px;
        text-align: center;
        text-decoration: none;
        font-weight: bold;
    }

        .edit-profile-btn:hover {
            background-color: #2b4c7e;
        }
</style>

<div class="body-content">
    <div class="smallheader">
        <a asp-action="Profile" asp-controller="User">Profile</a>
        <a asp-action="BookedServicesHistory" asp-controller="User">Order History</a>
        <a asp-action="Reset_Password" asp-controller="User">Reset Password</a>
    </div>
    <h2>Your Booking History</h2>

    @if (Model != null && Model.Any())
    {
        <table>
            <thead>
                <tr>
                    <th>Booking ID</th>
                    <th>Booking Title</th>
                    <th>Booking Message</th>
                    <th>Service Name</th>
                    <th>Worker Name</th>
                    <th>Booking Date</th>
                    <th>Status</th>
                    <th>Issue Image</th>
                    <th>Payment</th>
                    <th>Review</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var booking in Model)
                {
                    <tr>
                        <td>@booking.BookingId</td>
                        <td>@booking.BookingTittle</td>
                        <td>@booking.BookingMessae</td>
                        <td>@booking.ServiceName</td>
                        <td>@booking.EmployeeFullName</td>
                        <td>@booking.BookingStartDate?.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@booking.Status</td>
                        <td>
                            @if (booking.IssueImage != null)
                            {
                                var base64Image = Convert.ToBase64String(booking.IssueImage);
                                var imgSrc = $"data:image/jpeg;base64,{base64Image}";
                                <img src="@imgSrc" alt="Issue Image" style="width: 80px; height: 80px; object-fit: cover;" />
                            }
                            else
                            {
                                <span>No Image</span>
                            }
                        </td>
                        <td>@booking.ServicePrice</td>
                        <td>
                        <td>
                            <button onclick="openPaymentPopup(@booking.BookingId)">Pay</button>

                            <button onclick="openReviewPopup(@booking.BookingId)">Review</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="no-data">No booking history found.</p>
    }
</div>

 </div>

<!-- Payment Popup -->
<div class="popup-overlay" id="paymentPopup">
    <div class="popup">
        <span class="close-btn" onclick="closePaymentPopup()">&times;</span>
        <h2>Make a Payment</h2>
        <form asp-controller="User" asp-action="SubmitPayment" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="BookingId" id="paymentBookingId" />

            <input type="text" name="AmountPaid" placeholder="Enter Amount" required />
            <textarea name="PaymentNotes" placeholder="Payment Notes (optional)"></textarea>

            <button type="submit">Submit Payment</button>
        </form>
    </div>
</div>

<!-- Review Popup -->
<div class="popup-overlay" id="reviewPopup">
    <div class="popup">
        <span class="close-btn" onclick="closeReviewPopup()">&times;</span>
        <h2>Leave a Review</h2>
        <form asp-controller="User" asp-action="SubmitReview" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="BookingId" id="reviewBookingId" />

            <input type="text" name="Rating" placeholder="Enter Rating (1-5)" required />
            <textarea name="ReviewText" placeholder="Write your review here..." required></textarea>

            <button type="submit">Submit Review</button>
        </form>
    </div>
</div>

<script>
    function openPaymentPopup(bookingId) {
        document.getElementById('paymentBookingId').value = bookingId;
        document.getElementById('paymentPopup').style.display = 'flex';
    }

    function closePaymentPopup() {
        document.getElementById('paymentPopup').style.display = 'none';
    }

    function openReviewPopup(bookingId) {
        document.getElementById('reviewBookingId').value = bookingId;
        document.getElementById('reviewPopup').style.display = 'flex';
    }

    function closeReviewPopup() {
        document.getElementById('reviewPopup').style.display = 'none';
    }
</script>
<style>
    .popup-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        height: 100vh;
        width: 100vw;
        background: rgba(0, 0, 0, 0.5);
        justify-content: center;
        align-items: center;
        z-index: 999;
    }

    .popup {
        background: #fff;
        padding: 30px;
        border-radius: 12px;
        width: 90%;
        max-width: 400px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        position: relative;
    }

        .popup h2 {
            margin-top: 0;
            font-size: 1.5rem;
            color: #2b4c7e;
        }

        .popup input, .popup textarea {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border-radius: 6px;
            border: 1px solid #ccc;
        }

        .popup button[type="submit"] {
            width: 100%;
            background-color: #2b4c7e;
            color: #fff;
            border: none;
            padding: 10px;
            font-weight: 600;
            border-radius: 6px;
            margin-top: 10px;
        }

    .close-btn {
        position: absolute;
        top: 12px;
        right: 16px;
        font-size: 24px;
        color: #999;
        cursor: pointer;
    }

        .close-btn:hover {
            color: #333;
        }
</style>
