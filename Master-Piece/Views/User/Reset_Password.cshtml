@{
    ViewData["Title"] = "Change_Password";
}
<style>
    * {
        margin: 0px;
        padding: 0px;
        font-family: "Nunito Sans", serif;
        font-optical-sizing: auto;
        font-weight: 400;
        font-style: normal;
        font-variation-settings: "wdth" 100, "YTLC" 500;
    }
    .reset-container {
        background-image: url('background-image.jpg'); /* Replace with the actual background image URL */
        background-size: cover;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 60vh;
        margin: 0;
    }

    .reset-form {
        background: rgba(255, 255, 255, 0.8);
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

        .reset-form input {
            width: 90%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .reset-form button {
            background-color: yellow;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }

</style>

<style>
    .body-content {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f4f7fb;
        margin: 0;
        padding: 0;
        min-height: 100vh;
    }

    .smallheader {
        background-color: #f4f7fb;
        padding: 10px 20px;
        font-size: 16px;
        font-weight: 600;
        border-bottom: 1px solid #ccc;
        width: 75%;
        margin: 85px auto 0;
        text-align: center;
        gap: 10px;
        display: flex;
    }

        .smallheader a {
            color: #2b4c7e;
            text-decoration: none;
            margin: 0 15px;
            font-weight: 500;
        }

            .smallheader a:hover {
                text-decoration: underline;
            }

    .profile-container {
        background-color: #fff;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.07);
    }

    .profile-table {
        width: 80%;
        max-width: 900px;
        margin: 40px auto;
    }

    .profile-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 0;
        border-bottom: 1px solid #ddd;
    }

        .profile-item label {
            font-weight: bold;
            color: #444;
            flex: 1;
        }

        .profile-item p {
            flex: 2;
            text-align: left;
            color: #666;
        }

    .edit-profile-btn {
        display: block;
        width: fit-content;
        margin: 20px auto;
        padding: 10px 20px;
        background-color: #355c8c;
        color: #fff;
        border-radius: 5px;
        text-align: center;
        text-decoration: none;
        font-weight: bold;
    }

        .edit-profile-btn:hover {
            background-color: #2b4c7e;
        }
</style>

<div class="body-content">
    <div class="smallheader">
        <a asp-action="Profile" asp-controller="User">Profile</a>
        <a asp-action="BookedServicesHistory" asp-controller="User">Order History</a>
        <a asp-action="Reset_Password" asp-controller="User">Reset Password</a>
    </div>
    <div class="reset-container">
        <form class="reset-form" asp-action="Reset_Password" method="post">
            <input type="password" name="OldPassword" placeholder="Old Password" required />
            <input type="password" name="NewPassword" placeholder="New Password" required />
            <input type="password" name="ConfirmNewPassword" placeholder="Confirm New Password" required />
            <button type="submit">Change Password</button>
            <button type="button">
                <a asp-action="Index" asp-controller="Home">Go Back Home Page</a>
            </button>
        </form>
    </div>

</div>




 

