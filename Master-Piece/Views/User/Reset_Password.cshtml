@{
    ViewData["Title"] = "Change_Password";
}
<style>
    * {
        margin: 0px;
        padding: 0px;
        font-family: "Nunito Sans", serif;
        font-optical-sizing: auto;
        font-weight: 400;
        font-style: normal;
        font-variation-settings: "wdth" 100, "YTLC" 500;
    }
    .reset-container {
        background-image: url('background-image.jpg'); /* Replace with the actual background image URL */
        background-size: cover;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 60vh;
        margin: 0;
    }

    .reset-form {
        background: rgba(255, 255, 255, 0.8);
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

        .reset-form input {
            width: 90%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .reset-form button {
            background-color: yellow;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }

</style>
<div class="reset-container">
    <form class="reset-form" asp-action="Reset_Password" method="post">
        <input type="password" name="OldPassword" placeholder="Old Password" required />
        <input type="password" name="NewPassword" placeholder="New Password" required />
        <input type="password" name="ConfirmNewPassword" placeholder="Confirm New Password" required />
        <button type="submit">Change Password</button>
        <button type="button">
            <a asp-action="Index" asp-controller="Home">Go Back Home Page</a>
        </button>
    </form>
</div>

 

