@model IEnumerable<MainService>
@{
    ViewData["Title"] = "Services";
}
<style>

    .second_section {
        background-image: url("./master pictures/bathroom-plumbing.jpg");
        height: 350px;
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
        background-size: cover;
        background-position: center;
        filter: brightness(0.8);
        transition: filter 0.3s ease-in-out;
    }

        .second_section:hover {
            filter: brightness(1);
        }

    .search-container {
        display: flex;
        justify-content: center;
        background-color: rgba(255, 255, 255, 0.8);
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: box-shadow 0.3s ease-in-out;
    }

        .search-container:hover {
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

    .search-box {
        width: 300px;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 16px;
        transition: border-color 0.3s ease-in-out;
    }

        .search-box:focus {
            border-color: #007BFF;
        }

    .search-button {
        padding: 10px 20px;
        border: none;
        background-color: #007BFF;
        color: white;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        margin-left: 10px;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .search-button:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }

    .services-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 30px;
    }

    .service-card {
        width: 25%;
        padding: 20px;
        text-align: center;
        box-sizing: border-box;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .service-card img {
            width: 100%;
            height: 150px;
            display: block;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            object-fit: cover;
            transition: transform 0.3s ease-in-out;
        }

        .service-card:hover img {
            transform: scale(1.05);
        }

        .service-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

    .service-name {
        margin-top: 10px;
        font-size: 20px;
        font-weight: bold;
        color: #333;
        transition: color 0.3s ease-in-out;
    }

    .service-card:hover .service-name {
        color: #007BFF;
    }

</style>
<div class="second_section">
    <div class="search-container">
        <input type="text" class="search-box" placeholder="Search...">
        <button class="search-button">Search</button>
    </div>
</div>
<table class="services-table">
    <tr>
        @foreach (var service in Model)
        {
            <td class="service-card">
                <img src="@service.Image" alt="@service.ServiceName" href="">
                <div class="service-name"><a asp-action="Show_Workers_for_Specfic_Service_" asp-route-id="@service.ServiceId">@service.ServiceName</a></div>
                <p>@service.Description</p>
                <p><strong>Price:</strong> $@service.ServicePrice</p>
            </td>

            @if ((Model.ToList().IndexOf(service) + 1) % 4 == 0) // Display 4 items per row
            {
                <tr></tr> <!-- Correctly ends and starts new rows -->
            }
        }
    </tr>
</table>