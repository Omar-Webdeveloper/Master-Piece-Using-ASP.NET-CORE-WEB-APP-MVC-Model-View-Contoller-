<table class="services-table">
    <tr>
        @foreach (var service in Model)
        {
            <td class="service-card">
                @if (@service.Image != null)
                {
                    var base64Image = Convert.ToBase64String(@service.Image);
                    var imgSrc = $"data:image/jpeg;base64,{base64Image}";
                    <img src="@imgSrc" alt="@service.ServiceName" class="profile-image" />
                }
                else
                {
                    <img src="" alt="@service.ServiceName" class="profile-image" />
                }

                <div class="service-name"><a asp-action="Show_Workers_for_Specfic_Service_" asp-route-id="@service.ServiceId">@service.ServiceName</a></div>
                <p>@service.Description</p>
                <p><strong>Price:</strong> $@service.ServicePrice</p>
            </td>

            @if ((Model.ToList().IndexOf(service) + 1) % 4 == 0) // Display 4 items per row
            {
                <tr></tr> <!-- Correctly ends and starts new rows -->
            }
        }
    </tr>
</table>