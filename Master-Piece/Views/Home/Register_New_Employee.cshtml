@model Register_New_EmployeeViewModel;
<style>

    .container {
        display: flex;
        align-items: flex-start;
        background-color: #BCCCDC;
        padding: 20px;
        border-radius: 10px;
    }

    .form-section {
        flex: 1;
        margin-right: 20px;
    }

    .image-section {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .image-section img {
            width: 60%;
            border-radius: 10px;
        }

    .headline {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .subheadline {
        font-size: 16px;
        margin-bottom: 20px;
    }

    .signup-form {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .input-field {
        width: 80%;
        padding: 10px;
        margin: 5px 0;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .dropdown {
        width: 84%;
        padding: 10px;
        margin: 5px 0;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .submit-button {
        background-color: #4caf50;
        color: white;
        padding: 10px 20px;
        margin: 10px 0;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    .status-link {
        font-size: 14px;
        margin-top: 10px;
    }

        .status-link a {
            color: #0288d1;
            text-decoration: none;
        }

</style>
<div class="container">
    <div class="form-section">
        <h1 class="headline">Start earning money this week!</h1>
        <p class="subheadline">Gain access to hundreds of jobs in your city and build your own schedule.</p>
        <form class="signup-form" asp-action="Register_New_Employee" enctype="multipart/form-data">
            <input asp-for="FirstName" type="text" placeholder="First Name" />
            <span asp-validation-for="FirstName" class="text-danger"></span>

            <input asp-for="LastName" type="text" placeholder="Last Name" />
            <span asp-validation-for="LastName" class="text-danger"></span>

            <input asp-for="Email" type="email" placeholder="Email" />
			<span asp-validation-for="Email" class="text-danger"></span>

            <input asp-for="PasswordHash" type="password" placeholder="Password" />
            <span asp-validation-for="PasswordHash" class="text-danger"></span>

            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Repeat Password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

            <input asp-for="PersonalAddress" type="text" placeholder="Address" />
            <span asp-validation-for="PersonalAddress" class="text-danger"></span>

            <input asp-for="PersonalImage" type="file"  placeholder="Address" />
			<span asp-validation-for="PersonalImage" class="text-danger"></span>

            <input asp-for="DateOfBirth" type="date" />
			<span asp-validation-for="DateOfBirth" class="text-danger"></span>

            <input asp-for="PhoneNumber" type="nuber" placeholder="Phone Number" />
			<span asp-validation-for="PhoneNumber" class="text-danger"></span>

            <select asp-for="Gender">
                <option value="">-- Select Gender --</option>
                <option>Male</option>
                <option>Female</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>

            <input asp-for="WorkerServiceType" type="text" placeholder="Service Type" />
			<span asp-validation-for="WorkerServiceType" class="text-danger"></span>

            <select asp-for="SelectedServiceId" asp-items="Model.ServicesList">
                <option value="">-- Select Service --</option>
            </select>
            <span asp-validation-for="SelectedServiceId" class="text-danger"></span>

            <select asp-for="SelectedLocationId" asp-items="Model.LocationsList">
                <option value="">-- Select Location --</option>
            </select>
            <span asp-validation-for="SelectedLocationId" class="text-danger"></span>


            <button type="submit" class="submit-button">Let's Get Started</button>
        </form>
        <p class="status-link">Already applied? <a href="#">Check your application status here.</a></p>
    </div>
    <div class="image-section">
        <img src="./master pictures/Hello_our_Employee.png" alt="Job opportunity image">
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
