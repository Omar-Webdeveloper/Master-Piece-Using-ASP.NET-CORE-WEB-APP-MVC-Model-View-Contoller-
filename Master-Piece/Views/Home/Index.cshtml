                        <span asp-validation-for="@Model.ContactUsForm.LastName" class="text-danger"></span> <!-- Validation message -->

                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.ContactUsForm.Email" class="form-label">Email</label>
                        <input type="email" id="email" class="input-field" placeholder="Your Email" asp-for="@Model.ContactUsForm.Email">
                        <span asp-validation-for="@Model.ContactUsForm.Email" class="text-danger"></span> <!-- Validation message -->

                    </div>
