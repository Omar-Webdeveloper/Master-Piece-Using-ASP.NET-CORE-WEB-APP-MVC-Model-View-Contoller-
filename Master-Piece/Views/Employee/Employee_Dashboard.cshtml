
@{
    ViewData["Title"] = "Employee_Dashboard";
    Layout = "~/Views/Shared/_Employee_Layout.cshtml";

}



<style>
    :root {
        --primary: #4e73df;
        --accent: #36b9cc;
        --light: #f8f9fc;
        --dark: #2e3b55;
        --text: #343a40;
    }

    /* Main Dashboard Container */
    .dashboard-container {
        margin-left: 220px;
        padding: 30px;
        background-color: var(--light);
        color: var(--text);
        font-family: 'Segoe UI', sans-serif;
        min-height: 100vh;
    }

    /* Welcome Header (optional section) */
    .welcome-header {
        margin-bottom: 30px;
    }

        .welcome-header h2 {
            color: var(--dark);
            font-size: 2rem;
            margin-bottom: 5px;
        }

        .welcome-header p {
            font-size: 1rem;
            color: #666;
        }

    /* Statistics Cards Layout */
    .stats-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        gap: 20px;
        margin-bottom: 40px;
        padding-bottom: 10px;
    }

    /* Individual Stat Card */
    .stat-card {
        flex: 1 1 200px;
        background: var(--light);
        padding: 25px;
        border-radius: 15px;
        border-left: 5px solid var(--primary);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.08);
        text-align: center;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        min-width: 200px;
    }

        .stat-card:hover {
            background-color: #eaf0fb;
            transform: translateY(-5px);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.12);
        }

        .stat-card h1 {
            font-size: 2.7rem;
            margin: 10px 0;
            color: var(--primary);
        }

        .stat-card p {
            font-size: 1rem;
            color: #666;
            margin: 0;
            font-weight: 500;
        }

    /* Chart Container */
    .chart-container {
        width: 100%;
        max-width: 700px;
        margin: 0 auto;
        padding: 25px;
        background-color: #ffffff;
        border-radius: 15px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.08);
        text-align: center;
        border: 2px dashed var(--accent);
    }

        .chart-container h3 {
            margin-bottom: 20px;
            font-size: 1.6rem;
            font-weight: 600;
            color: var(--dark);
        }

    /* Chart Styling */
    #weeklyProgressChart {
        width: 100% !important;
        height: auto !important;
    }

    /* Custom Scrollbar for Horizontal Scrolling (optional) */
    .stats-container::-webkit-scrollbar {
        height: 8px;
    }

    .stats-container::-webkit-scrollbar-thumb {
        background: var(--primary);
        border-radius: 4px;
    }

    /* Responsive Adjustments */
    @@media (max-width: 768px) {
        .stats-container

    {
        flex-direction: column;
        align-items: stretch;
    }

    .stat-card {
        width: 100%;
    }

    .dashboard-container {
        margin-left: 0;
        padding: 20px;
    }

    }
</style>
<!-- Dashboard Content -->
<div class="dashboard-container">
    <!-- Statistics Cards Section -->
    <div class="stats-container">
        <!-- Card 1 -->
        <div class="stat-card">
            <h1>@ViewBag.CompletedBookings</h1>
            <p>Completed Jobs</p>
        </div>

        <!-- Card 2 -->
        <div class="stat-card">
            <h1>@ViewBag.c</h1>
            <p>Customer Ratings</p>
        </div>

        <!-- Card 3 -->
        <div class="stat-card">
            <h1>🎉</h1>
            @if (ViewBag.YearsWithUs < 1)
            {
                <p>Thanks for the day with us 🌟</p>
            }
            else
            {
                <p>Thanks for @ViewBag.YearsWithUs year(s) as part of our family ❤️</p>
            }
        </div>

        <!-- Card 4 -->
        <div class="stat-card">
            @if (ViewBag.IsEmployeeOfMonth == true)
            {
                <h1>@ViewBag.WorkerName</h1>
                <p>🎉 Congratulations! You are the Employee of the Month! 🎉</p>
            }
            else
            {
                <p>Good Luck Next Time</p>
            }

        </div>
    </div>



