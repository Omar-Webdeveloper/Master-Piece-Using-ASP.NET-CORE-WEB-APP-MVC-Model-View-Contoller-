@{
    Layout = "~/Views/Shared/_Manager_Layout.cshtml";
}
@{
    ViewData["Title"] = "Admin_Dashboard";
}


<style>
    :root {
        --primary: #4e73df;
        --accent: #36b9cc;
        --light: #f8f9fc;
        --dark: #2e3b55;
        --text: #343a40;
    }

    /* Main Dashboard Container */
    .dashboard-container {
        margin-left: 220px;
        padding: 30px;
        background-color: var(--light);
        color: var(--text);
        font-family: 'Segoe UI', sans-serif;
        min-height: 100vh;
    }

    /* Welcome Header (optional section) */
    .welcome-header {
        margin-bottom: 30px;
    }

        .welcome-header h2 {
            color: var(--dark);
            font-size: 2rem;
            margin-bottom: 5px;
        }

        .welcome-header p {
            font-size: 1rem;
            color: #666;
        }

    /* Statistics Cards Layout */
    .stats-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        gap: 20px;
        margin-bottom: 40px;
        padding-bottom: 10px;
    }

    /* Individual Stat Card */
    .stat-card {
        flex: 1 1 200px;
        background: var(--light);
        padding: 25px;
        border-radius: 15px;
        border-left: 5px solid var(--primary);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.08);
        text-align: center;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        min-width: 200px;
    }

        .stat-card:hover {
            background-color: #eaf0fb;
            transform: translateY(-5px);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.12);
        }

        .stat-card h1 {
            font-size: 2.7rem;
            margin: 10px 0;
            color: var(--primary);
        }

        .stat-card p {
            font-size: 1rem;
            color: #666;
            margin: 0;
            font-weight: 500;
        }

    /* Chart Container */
    .chart-container {
        width: 100%;
        max-width: 700px;
        margin: 0 auto;
        padding: 25px;
        background-color: #ffffff;
        border-radius: 15px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.08);
        text-align: center;
        border: 2px dashed var(--accent);
    }

        .chart-container h3 {
            margin-bottom: 20px;
            font-size: 1.6rem;
            font-weight: 600;
            color: var(--dark);
        }

    /* Chart Styling */
    #weeklyProgressChart {
        width: 100% !important;
        height: auto !important;
    }

    /* Custom Scrollbar for Horizontal Scrolling (optional) */
    .stats-container::-webkit-scrollbar {
        height: 8px;
    }

    .stats-container::-webkit-scrollbar-thumb {
        background: var(--primary);
        border-radius: 4px;
    }

    /* Responsive Adjustments */
    @@media (max-width: 768px) {
        .stats-container {
            flex-direction: column;
            align-items: stretch;
        }

        .stat-card {
            width: 100%;
        }

        .dashboard-container {
            margin-left: 0;
            padding: 20px;
        }
    }
</style>
<!-- Dashboard Content -->
<div class="dashboard-container">
    <!-- Statistics Cards Section -->
    <div class="stats-container">
        <!-- Card 1 - Total Employees -->
        <div class="stat-card">
            <h1>@ViewBag.EmployeeCount</h1>
            <p>Total Employees</p>
        </div>

        <!-- Card 2 - Manager Full Name -->
        <div class="stat-card">
            <h1>@ViewBag.ManagerFullName</h1>
            <p>Manager Name</p>
        </div>

        <!-- Card 3 - Covered Area Count -->
        <div class="stat-card">
            <h1>@ViewBag.CoveredAreaCount</h1>
            <p>Covered Areas Count</p>
        </div>

        <!-- Card 4 - Covered Area Names (Joined into single line) -->
        <div class="stat-card">
            <h1 style="font-size: 1rem;">@string.Join(", ", (string[])ViewBag.CoveredAreas)</h1>
            <p>Covered Areas</p>
        </div>

    </div>




    <div class="chart-container">
        <h3>Weekly Task Progress</h3>
        <canvas id="weeklyProgressChart"></canvas>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const ctx = document.getElementById('weeklyProgressChart').getContext('2d');

            const weeklyProgressChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: @Html.Raw(Json.Serialize(ViewBag.ChartLabels)), // e.g., ["1", "2", "3"]
                    datasets: [{
                        label: 'Completed Jobs',
                        data: @Html.Raw(Json.Serialize(ViewBag.ChartData)), // e.g., [3, 5, 7]
                        borderColor: 'rgba(75, 192, 192, 1)',
                        backgroundColor: 'rgba(75, 192, 192, 0.2)',
                        tension: 0.4,
                        fill: true
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'Jobs Completed'
                            }
                        },
                        x: {
                            title: {
                                display: true,
                                text: 'Days of the Month'
                            }
                        }
                    }
                }
            });
        });
    </script>

</div>