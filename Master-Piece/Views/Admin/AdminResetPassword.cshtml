
@{
    ViewData["Title"] = "AdminResetPassword";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

<div class="reset-password-container">
    <div class="reset-card">
        <h2>Reset Password</h2>

        <form asp-action="AdminResetPassword" method="post">
            <div class="form-group">
                <label for="OldPassword">Old Password</label>
                <input type="password" id="OldPassword" name="OldPassword" class="form-control" required oninput="validatePasswordLength(this)" />
                <span id="oldPasswordError" class="error-message"></span>
            </div>
            <div class="form-group">
                <label for="NewPassword">New Password</label>
                <input type="password" id="NewPassword" name="NewPassword" class="form-control" required oninput="validatePasswordLength(this)" />
                <span id="newPasswordError" class="error-message"></span>
            </div>

            <div class="form-group">
                <label for="ConfirmNewPassword">Confirm New Password</label>                
                <input type="password" id="ConfirmNewPassword" name="ConfirmNewPassword" class="form-control" required oninput="validatePasswordLength(this)" />
                <span id="confirmPasswordError" class="error-message"></span>
            </div>




            @* <div class="form-group"> *@
            @*     <label for="NewPassword">New Password</label> *@
            @*     <input type="password" id="NewPassword" name="NewPassword" class="form-control" required /> *@
            @* </div> *@

            @* <div class="form-group"> *@
            @*     <label for="ConfirmNewPassword">Confirm New Password</label> *@
            @*     <input type="password" id="ConfirmNewPassword" name="ConfirmNewPassword" class="form-control" required /> *@
            @* </div> *@

            <button type="submit" class="btn-submit">Reset Password</button>
        </form>
    </div>
</div>

<style>
    .reset-password-container {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 50px 0;
    }

    .reset-card {
        background-color: #ffffff;
        padding: 50px;
        border-radius: 12px;
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 500px;
    }

        .reset-card h2 {
            color: #2e3b55;
            margin-bottom: 25px;
            text-align: center;
        }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        display: block;
        font-weight: 600;
        margin-bottom: 6px;
        color: #343a40;
    }

    input[type="password"] {
        width: 100%;
        padding: 10px 14px;
        border: 1px solid #ccc;
        border-radius: 8px;
        background-color: #f8f9fc;
        font-size: 1rem;
    }

    .btn-submit {
        width: 100%;
        padding: 12px;
        background-color: #4e73df;
        color: #ffffff;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn-submit:hover {
            background-color: #3b5cc4;
        }
</style>
<script>
    function validatePasswordLength(input) {
        const value = input.value;
        let errorSpanId = "";

        switch (input.id) {
            case "OldPassword":
                errorSpanId = "oldPasswordError";
                break;
            case "NewPassword":
                errorSpanId = "newPasswordError";
                break;
            case "ConfirmNewPassword":
                errorSpanId = "confirmPasswordError";
                break;
        }

        const errorSpan = document.getElementById(errorSpanId);

        if (value.length < 8 || value.length > 50) {
            errorSpan.textContent = "Password must be between 8 and 50 characters.";
            errorSpan.style.color = "red";
        } else {
            errorSpan.textContent = "";
        }
    }
</script>


    <style>
    .error-message {
        font-size: 0.9rem;
        color: red;
        margin-top: 4px;
        display: block;
    }

    </style>