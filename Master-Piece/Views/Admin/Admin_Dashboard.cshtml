@{
    ViewData["Title"] = "Admin_Dashboard";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

<style>
    :root {
        --primary: #4e73df;
        --accent: #36b9cc;
        --light: #f8f9fc;
        --dark: #2e3b55;
        --text: #343a40;
    }

    .dashboard-container {
        margin-left: 220px;
        padding: 30px;
        background-color: var(--light);
        color: var(--text);
        font-family: 'Segoe UI', sans-serif;
        min-height: 100vh;
    }

    .welcome-header {
        margin-bottom: 30px;
    }

        .welcome-header h2 {
            color: var(--dark);
            font-size: 2rem;
            margin-bottom: 5px;
        }

        .welcome-header p {
            font-size: 1rem;
            color: #666;
        }

    .stats-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        gap: 20px;
        margin-bottom: 40px;
        padding-bottom: 10px;
    }

    .stat-card {
        flex: 1 1 200px;
        background: var(--light);
        padding: 25px;
        border-radius: 15px;
        border-left: 5px solid var(--primary);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.08);
        text-align: center;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        min-width: 200px;
    }

        .stat-card:hover {
            background-color: #eaf0fb;
            transform: translateY(-5px);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.12);
        }

        .stat-card h1 {
            font-size: 2.7rem;
            margin: 10px 0;
            color: var(--primary);
        }

        .stat-card p {
            font-size: 1rem;
            color: #666;
            margin: 0;
            font-weight: 500;
        }
    /* Wider card specifically for covered locations */
    .wide-card {
        flex: 2 1 420px; /* Make it approximately double width */
        transition: transform 0.3s ease, box-shadow 0.3s ease, width 0.3s ease, height 0.3s ease;
    }

        /* Hover effect: slightly increase size */
        .wide-card:hover {
            transform: scale(1.03); /* Slightly grow both width & height */
            box-shadow: 0 14px 28px rgba(0, 0, 0, 0.15);
        }

</style>

<!-- Welcome Header -->
<div class="dashboard-container">
    <div class="welcome-header">
        <h2>Welcome, @ViewBag.AdminName!</h2>
        <p>Here’s a quick overview of your platform statistics:</p>
    </div>

    <!-- Statistics Cards Section -->
    <div class="stats-container">
        <!-- Total Users -->
        <div class="stat-card">
            <h1>@ViewBag.TotalUsers</h1>
            <p>Total Users</p>
        </div>

        <!-- Total Employees -->
        <div class="stat-card">
            <h1>@ViewBag.TotalEmployeesRequests</h1>
            <p>Total Employees Requests</p>
        </div>

        <!-- Total Managers -->
        <div class="stat-card">
            <h1>@ViewBag.TotalManagers</h1>
            <p>Total Managers</p>
        </div>

        <!-- Covered Locations -->
        <div class="stat-card">
            <h1>@ViewBag.CoveredLocationCount</h1>
            <p>Covered Locations</p>
        </div>
    </div>
    <div class="stat-card wide-card">
        <h1>@ViewBag.AcceptedEmployees</h1>
        <p>Accepted Employees in our website</p>

    </div>
    <!-- Optional: List Covered Location Names -->
    <!-- Locations Covered Card -->
    <div class="stat-card wide-card">
        <h1>@ViewBag.CoveredLocationCount</h1>
        <p>Locations Covered</p>
        <ul style="margin-top: 15px; padding-left: 20px; text-align: left;">
            @foreach (var location in ViewBag.CoveredLocationList as List<string>)
            {
                <li>@location</li>
            }
        </ul>
    </div>

</div>
