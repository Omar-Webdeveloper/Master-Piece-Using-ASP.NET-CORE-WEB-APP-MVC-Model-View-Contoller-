@{
    Layout = "~/Views/Shared/_Manager_Layout.cshtml";
}
@{
    ViewData["Title"] = "Admin_Dashboard";
}

<style>

    /* Statistics Cards Styling */
    .dashboard-container {
        margin-left: 200px;
        padding: 20px;
    }

    .stats-container {
        display: flex;
        justify-content: space-between;
        gap: 20px;
        margin-bottom: 40px; /* Space between cards and diagram */
    }

    .stat-card {
        background: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        text-align: center;
        width: 180px;
    }

        .stat-card h1 {
            font-size: 2.5rem;
            margin: 10px 0;
            color: #4CAF50; /* Custom color */
        }

        .stat-card p {
            font-size: 1rem;
            color: #555;
            margin: 0;
        }

        .stat-card:hover {
            transform: scale(1.05);
            transition: transform 0.2s ease-in-out;
        }

    /* Bar Chart Styling */
    .chart-container {
        text-align: center;
    }

    .bar-chart {
        display: flex;
        align-items: flex-end;
        gap: 20px;
        height: 300px;
        border-left: 2px solid #555;
        border-bottom: 2px solid #555;
        padding: 10px;
        justify-content: center;
    }

    .bar {
        width: 60px;
        background-color: #4CAF50;
        border-radius: 5px;
        text-align: center;
        color: white;
    }

        .bar span {
            position: relative;
            top: -25px;
            font-weight: bold;
        }

    .bar-1 {
        height: 50%;
    }

    .bar-2 {
        height: 70%;
    }

    .bar-3 {
        height: 90%;
    }

    .bar-4 {
        height: 60%;
    }

    .labels {
        display: flex;
        justify-content: space-around;
        margin-top: 10px;
        padding: 0 10px;
    }

        .labels div {
            text-align: center;
            flex: 1;
        }
</style>
<!-- Dashboard Content -->
<div class="dashboard-container">
    <!-- Statistics Cards -->
    <div class="stats-container">
        <div class="stat-card">
            <h1>1,024</h1>
            <p>Total Visitors</p>
        </div>
        <div class="stat-card">
            <h1>85</h1>
            <p>Active Users</p>
        </div>
        <div class="stat-card">
            <h1>47</h1>
            <p>New Signups</p>
        </div>
        <div class="stat-card">
            <h1>12k</h1>
            <p>Page Views</p>
        </div>
    </div>

    <!-- Diagram -->
    <div class="chart-container">
        <h2>Website Traffic Stats</h2>
        <div class="bar-chart">
            <div class="bar bar-1"><span>50%</span></div>
            <div class="bar bar-2"><span>70%</span></div>
            <div class="bar bar-3"><span>90%</span></div>
            <div class="bar bar-4"><span>60%</span></div>
        </div>
        <div class="labels">
            <div>Monday</div>
            <div>Tuesday</div>
            <div>Wednesday</div>
            <div>Thursday</div>
        </div>
    </div>
</div>
