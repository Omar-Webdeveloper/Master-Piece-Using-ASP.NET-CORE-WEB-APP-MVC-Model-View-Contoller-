<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FreshLook</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
        }

        /* Minimalist Header */
        .header {
            position: fixed;
            width: 100%;
            top: 0;
            left: 0;
            background: #1e1e1e;
            padding: 20px 50px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        }

        .logo {
            font-size: 24px;
            font-weight: bold;
            color: #ffffff;
        }

        .nav-links {
            display: flex;
            gap: 25px;
        }

            .nav-links a {
                text-decoration: none;
                color: #ffffff;
                font-size: 16px;
                transition: 0.3s;
            }

                .nav-links a:hover {
                    color: #f39c12;
                }

        .cta-button {
            background: #f39c12;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            font-weight: bold;
            transition: 0.3s;
        }

            .cta-button:hover {
                background: #e67e22;
            }

        .container {
            padding-top: 80px;
        }

        /* Footer */
        .footer {
            background: #1e1e1e;
            color: #ffffff;
            padding: 40px 0;
            text-align: center;
        }

        .footer-links a {
            color: #bbbbbb;
            margin: 0 15px;
            text-decoration: none;
            transition: color 0.3s;
        }

            .footer-links a:hover {
                color: #f39c12;
            }

        .social-icons a {
            color: #bbbbbb;
            margin: 0 10px;
            font-size: 22px;
            transition: 0.3s;
        }

            .social-icons a:hover {
                color: #f39c12;
            }
    </style>
</head>
<body>
    <header class="header">
        <div class="logo">FreshLook</div>
        <nav class="nav-links">
            <a asp-controller="Home" asp-action="Index">Home</a>
            <a asp-controller="Home" asp-action="Services">Services</a>
            <a asp-controller="Home" asp-action="About">About</a>
            <a asp-controller="Home" asp-action="Contact">Contact</a>
            <a class="cta-button" asp-controller="Home" asp-action="Login">Sign Up</a>
        </nav>
    </header>

    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <p>&copy; 2025 FreshLook. All Rights Reserved.</p>
        <div class="footer-links">
            <a asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
            <a asp-controller="Home" asp-action="Terms">Terms of Service</a>
        </div>
        <div class="social-icons mt-3">
            <a href="#"><i class="fab fa-facebook"></i></a>
            <a href="#"><i class="fab fa-twitter"></i></a>
            <a href="#"><i class="fab fa-instagram"></i></a>
            <a href="#"><i class="fab fa-linkedin"></i></a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
